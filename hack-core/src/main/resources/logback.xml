<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${rat.logFile:-logs/rat.log}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${rat.logFile:-logs/rat.log}.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- keep 1 days' worth of history -->
            <maxHistory>5</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{HH:mm:ss.SSS}  %-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />
    <appender
            name="STDOUT"
            class="ch.qos.logback.core.ConsoleAppender">

        <!--  <layout class="ch.qos.logback.classic.PatternLayout" >
             <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{32} - %msg%n</pattern>
         </layout> -->
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>

    <!-- Performance Logging -->
    <!--This file appender is used to output aggregated performance statistics-->
    <appender name="Perf4JStates"  class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/${rat.perfPrefix:-rat}-perf4States.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>logs/${rat.perfPrefix:-rat}-perf4States.log.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- keep 1 days' worth of history -->
            <maxHistory>5</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%m%n</pattern>
        </encoder>
    </appender>

    <!--Display the normal stopwatch information of the logger-->
    <appender name="Perf4JInfo"  class="ch.qos.logback.core.FileAppender">
        <file>logs/${rat.perfPrefix:-rat}-perf4Info.log</file>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyy-mm-dd HH:mm:ss.SSS} [%thread] [%c] %-5p - %m%n</pattern>
        </layout>
    </appender>

    <!--this appender is to output the graph URLs generated by the GraphingStatisticsAppenders-->
    <appender name="graphsFileAppender"  class="ch.qos.logback.core.FileAppender">
        <file>logs/${rat.perfPrefix:-rat}-perf4Graph.log</file>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%m%n</pattern>
        </layout>
    </appender>

    <!--This GraphingStatisticsAppender graph TPS for the firstBlock and secondBlock tags-->
    <appender name="graphExecutionTPS" class="org.perf4j.logback.GraphingStatisticsAppender">
        <!-- Possible GraphTypes are Mean, Min, Max, StdDev, Count and TPS -->
        <param name="GraphType" value="TPS"/>
        <!-- You define the names and values-->
        <param name="TagNamesToGraph" value="firstBlock,secondBlock"/>
        <appender-ref ref="graphsFileAppender"/>
    </appender>

    <!--
      This AsyncCoalescingStatisticsAppender groups StopWatch log messages
      into GroupedTimingStatistics messages which it sends on the
      file appender defined below
    -->
    <appender name="CoalescingStatistics" class="org.perf4j.logback.AsyncCoalescingStatisticsAppender">
        <param name="TimeSlice" value="10000"/>
        <appender-ref ref="Perf4JStates"/>
    </appender>

    <!--This the Slf4jStopWatch Logger defined in java class-->
    <logger name="org.perf4j.TimingLogger" level="INFO" additivity="false">
        <appender-ref ref="CoalescingStatistics"/>
        <!--<appender-ref ref="Perf4JInfo"/>-->
    </logger>

    <root level="${rat.logLevel:-INFO}" additivity="false">
        <appender-ref ref="${rat.logAppender:-STDOUT}" />
    </root>
</configuration>